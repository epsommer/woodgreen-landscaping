{
  "compilerOptions": {
    "typeRoots": [
      "../node_modules/@types", // Path to node_modules/@types from `types` directory
      "./"                       // Include types in the current directory (e.g., `types` directory)
    ],
    "strict": true              // Optional, for stricter type checks
  },
  "include": [
    "../src/**/*",            // Correct path to `src` directory from `types` directory
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "./**/*.d.ts"             // Include declaration files in the `types` directory
  ]
}

