{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*",
    "./declarations.d.ts",
    "./index.d.ts",
    "./eslint-plugin-react.d.ts",
    "./eslint-plugin-react-hooks.d.ts"
  ]
}
